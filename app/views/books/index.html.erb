<% content_for :title, "Books" %>

<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Available Books</h1>
  </div>

  <% if @books.any? %>
    <div class="row row-cols-1 row-cols-md-3 g-4" id="books">
      <% @books.each do |book| %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <%= render book %>
              <div class="mt-3">
                <%= link_to "View Details", book, class: "btn btn-outline-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      No books available at the moment.
    </div>
  <% end %>
</div>