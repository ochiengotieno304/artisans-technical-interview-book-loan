<header class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container">
    <%= link_to "Library", root_path, class: "navbar-brand" %>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <% if current_user %>
          <li class="nav-item">
            <%= link_to "My Borrowed Books", borrowed_books_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= button_to "Sign Out", session_path, 
                method: :delete, 
                class: "btn btn-outline-light ms-2" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign In", new_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>